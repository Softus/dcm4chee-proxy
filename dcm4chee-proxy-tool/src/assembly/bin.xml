<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
  <id>bin</id>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>src</directory>
      <includes>
        <include>bin/proxysa</include>
      </includes>
      <outputDirectory>.</outputDirectory>
      <fileMode>0755</fileMode>
      <lineEnding>unix</lineEnding>
    </fileSet>
    <fileSet>
      <directory>src</directory>
      <includes>
        <include>bin/proxysa.bat</include>
      </includes>
      <outputDirectory>.</outputDirectory>
      <lineEnding>dos</lineEnding>
    </fileSet>
    <fileSet>
      <directory>src/etc/proxysa</directory>
      <includes>
        <include>log4j.properties</include>
      </includes>
      <outputDirectory>etc</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../dcm4chee-proxy-mc/src/test/resources</directory>
      <includes>
        <include>cacerts.jks</include>
      </includes>
      <outputDirectory>etc</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../dcm4chee-proxy-mc/src/main/config/conf</directory>
      <includes>
        <include>dcm4chee-proxy-key.jks</include>
      </includes>
      <outputDirectory>etc</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../dcm4chee-proxy-mc/src/main/config/ldap</directory>
      <includes>
        <include>**/*</include>
      </includes>
      <outputDirectory>conf</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../dcm4chee-proxy-mc/src/main/config/prefs</directory>
      <includes>
        <include>sample-config.xml</include>
      </includes>
      <outputDirectory>conf</outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>org.dcm4che:dcm4che-conf-ldap</include>
        <include>org.dcm4che:dcm4che-conf-prefs</include>
        <include>org.dcm4che:dcm4che-conf-api</include>
        <include>org.dcm4che:dcm4che-core</include>
        <include>org.dcm4che:dcm4che-net</include>
        <include>org.dcm4che.dcm4chee-proxy:dcm4chee-proxy-mc</include>
        <include>org.dcm4che.dcm4chee-proxy:dcm4chee-proxy-tool</include>
        <include>org.slf4j:slf4j-api</include>
        <include>org.slf4j:slf4j-log4j12</include>
        <include>log4j:log4j</include>
        <include>commons-cli:commons-cli</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>