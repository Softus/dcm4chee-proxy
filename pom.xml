<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.dcm4chee.proxy</groupId>
  <artifactId>dcm4chee-proxy</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <description>DICOM J2EE Proxy Application</description>
  <packaging>ejb</packaging>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.5.1</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.12</version>
        <configuration>
          <skipTests>true</skipTests>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-ejb-plugin</artifactId>
        <version>2.3</version>
        <configuration>
          <ejbVersion>3.1</ejbVersion>
          <filterDeploymentDescriptor>true</filterDeploymentDescriptor>
          <archive>
            <manifestEntries>
              <Dependencies>${lib-dep}</Dependencies>
            </manifestEntries>
          </archive>
          <excludes>
            <exclude>org/dcm4chee/proxy/tool/**</exclude>
            <exclude>${profile-exclude}</exclude>
          </excludes>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.dcm4che</groupId>
      <artifactId>dcm4che-conf-api</artifactId>
      <version>3.0.0-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.dcm4che</groupId>
      <artifactId>dcm4che-conf-ldap</artifactId>
      <version>3.0.0-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.dcm4che</groupId>
      <artifactId>dcm4che-net</artifactId>
      <version>3.0.0-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.dcm4che</groupId>
      <artifactId>dcm4che-conf-prefs</artifactId>
      <version>3.0.0-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.dcm4che</groupId>
      <artifactId>dcm4che-core</artifactId>
      <version>3.0.0-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.jboss.spec.javax.ejb</groupId>
      <artifactId>jboss-ejb-api_3.1_spec</artifactId>
      <version>1.0.1.Final</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>1.6.4</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.10</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <version>1.6.4</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>commons-cli</groupId>
      <artifactId>commons-cli</artifactId>
      <version>1.2</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <profiles>
    <profile>
      <id>lib-prefs</id>
      <properties>
        <proxy-conf>org.dcm4chee.proxy.conf.prefs.PreferencesProxyConfiguration</proxy-conf>
        <lib-dep>org.dcm4che.core,org.dcm4che.net,org.dcm4che.conf.api,org.dcm4che.conf.prefs,org.dcm4che.conf.ldap</lib-dep>
        <profile-exclude>**/service/**</profile-exclude>
      </properties>
      <build>
        <finalName>dcm4chee-proxy-lib-prefs-${project.version}</finalName>
        <resources>
          <resource>
            <directory>src/main/resources</directory>
          </resource>
          <resource>
            <directory>src/main/resources-ldap</directory>
            <filtering>true</filtering>
          </resource>
          <resource>
            <directory>src/main/filters</directory>
          </resource>
        </resources>
      </build>
    </profile>
    <profile>
      <id>lib-ldap</id>
      <properties>
        <proxy-conf>org.dcm4chee.proxy.conf.ldap.LdapProxyConfiguration</proxy-conf>
        <lib-dep>org.dcm4che.core,org.dcm4che.net,org.dcm4che.conf.api,org.dcm4che.conf.ldap,org.dcm4che.conf.prefs</lib-dep>
        <profile-exclude>**/service/**</profile-exclude>
      </properties>
      <build>
        <finalName>dcm4chee-proxy-lib-ldap-${project.version}</finalName>
        <resources>
          <resource>
            <directory>src/main/resources</directory>
          </resource>
          <resource>
            <directory>src/main/resources-ldap</directory>
            <filtering>true</filtering>
          </resource>
          <resource>
            <directory>src/main/filters</directory>
          </resource>
        </resources>
      </build>
    </profile>
    <profile>
      <id>prefs</id>
      <properties>
        <proxy-conf>org.dcm4chee.proxy.conf.prefs.PreferencesProxyConfiguration</proxy-conf>
        <lib-dep>org.dcm4che.core,org.dcm4che.net,org.dcm4che.conf.api,org.dcm4che.conf.prefs</lib-dep>
        <profile-exclude>**/conf/ldap/**</profile-exclude>
      </properties>
      <build>
        <finalName>dcm4chee-proxy-prefs-${project.version}</finalName>
        <resources>
          <resource>
            <directory>src/main/resources</directory>
          </resource>
          <resource>
            <directory>src/main/config/conf</directory>
            <includes>
              <include>dcm4chee-proxy-key.jks</include>
            </includes>
          </resource>
        </resources>
      </build>
    </profile>
    <profile>
      <id>ldap</id>
      <properties>
        <proxy-conf>org.dcm4chee.proxy.conf.ldap.LdapProxyConfiguration</proxy-conf>
        <lib-dep>org.dcm4che.core,org.dcm4che.net,org.dcm4che.conf.api,org.dcm4che.conf.ldap</lib-dep>
        <profile-exclude>**/conf/prefs/**</profile-exclude>
      </properties>
      <build>
        <finalName>dcm4chee-proxy-ldap-${project.version}</finalName>
        <resources>
          <resource>
            <directory>src/main/resources</directory>
          </resource>
          <resource>
            <directory>src/main/config/conf</directory>
            <includes>
              <include>dcm4chee-proxy-key.jks</include>
            </includes>
          </resource>
          <resource>
            <directory>src/main/resources-ldap</directory>
            <filtering>true</filtering>
          </resource>
          <resource>
            <directory>src/main/filters</directory>
          </resource>
        </resources>
      </build>
    </profile>
    <profile>
      <id>tool</id>
      <properties>
        <profile-exclude>nothing</profile-exclude>
      </properties>
      <build>
        <finalName>dcm4chee-proxy-tool-${project.version}</finalName>
        <plugins>
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <version>2.2.1</version>
            <configuration>
              <descriptors>
                <descriptor>src/assembly/bin.xml</descriptor>
              </descriptors>
            </configuration>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
      <dependencies>
        <dependency>
          <groupId>org.dcm4che</groupId>
          <artifactId>dcm4che-conf-api</artifactId>
          <version>3.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
          <groupId>org.dcm4che</groupId>
          <artifactId>dcm4che-conf-ldap</artifactId>
          <version>3.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
          <groupId>org.dcm4che</groupId>
          <artifactId>dcm4che-net</artifactId>
          <version>3.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
          <groupId>org.dcm4che</groupId>
          <artifactId>dcm4che-conf-prefs</artifactId>
          <version>3.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
          <groupId>org.dcm4che</groupId>
          <artifactId>dcm4che-core</artifactId>
          <version>3.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
          <groupId>commons-cli</groupId>
          <artifactId>commons-cli</artifactId>
          <version>1.2</version>
        </dependency>
        <dependency>
          <groupId>org.slf4j</groupId>
          <artifactId>slf4j-api</artifactId>
          <version>1.6.4</version>
        </dependency>
        <dependency>
          <groupId>junit</groupId>
          <artifactId>junit</artifactId>
          <version>4.10</version>
          <scope>test</scope>
        </dependency>
        <dependency>
          <groupId>org.slf4j</groupId>
          <artifactId>slf4j-log4j12</artifactId>
          <version>1.6.4</version>
        </dependency>
      </dependencies>
    </profile>
  </profiles>
</project>